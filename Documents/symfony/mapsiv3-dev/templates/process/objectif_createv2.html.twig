{% extends 'baseform.html.twig' %}

{% form_theme formObjectif _self %}

{% block body %}
	{{ form_start(formObjectif) }}
		<div class="row">
			<div class="col-lg-12">
				<div class="ibox" id="printed">
					<div class="ibox-content">
						<div class="row">
							<div class="col-lg-4">
								<h1>
								{% if not editMode %}
								Nouvel objectif
								{% else %}
								Objectif
								{% endif %}
								</h1>
							</div>
							<div class="col-lg-8">
                                <span class="float-right">
                                    <a class="btn btn-white btn-sm noprint" onclick="leaveEntity('objectif')">Quitter</a>
                                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER_EDITABLE')%}
                                        <button type='submit' class="btn btn-primary btn-sm noprint disab" data-id="{{ objectif.id }}" onclick="submitAjax({{ objectif.id | default("undefined") }},'objectif')">
                                        {% if editMode %}
                                        Enregistrer <span class="change-message">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cloud-arrow-up-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm2.354 5.146l-2-2a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L7.5 6.707V10.5a.5.5 0 0 0 1 0V6.707l1.146 1.147a.5.5 0 0 0 .708-.708z"/>
                                        </svg>
                                        </span>
                                        {% else %}
                                        Ajouter
                                        {% endif %}
                                        </button>
										<span class="dropdown">
											<button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
												
											</button>
											<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
												<a class="dropdown-item" href="" data-id="{{ objectif.id }}" onclick="deleteEntity({{ objectif.id | default("undefined") }},'objectif')">Supprimer</a>
												
											</div>
										</span>
                                    {% endif %}
                                </span>
							</div>
						</div>
						
						<div class="row">
							<div class="col-lg-12">
							{{dump(debug)}}
							{{dump(debugc)}}
								<div class="row">
									<div class="col-lg-12">
										<br>
										<div class="form-group row">
											<div class="col-sm-2"></div>
											<div class="col-sm-10">{{ form_widget(formObjectif.designation)}}</div>
										</div>
										<div class="form-group row">
											<label class="col-sm-2 col-form-label text-sm-right"><strong></strong></label>
											<div class="col-sm-5">
												{{ form_widget(formObjectif.responsable)}}<small id="" class="form-text text-muted">Responsable</small>
												{{ form_widget(formObjectif.suppleant)}}<small id="" class="form-text text-muted">Suppl√©ant</small>
											</div>
											<div class="col-sm-5">{{ form_widget(formObjectif.peoples)}}<small id="" class="form-text text-muted">Contributeurs</small></div>
											
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="row">
							<label class="col-sm-2 col-form-label text-sm-right"><strong></strong></label>
							<div class="col-sm-8 text-sm-left">
								<dd class="mb-1">{% for place in workflow_marked_places(objectif) %} <strong>{{ workflow_metadata(objectif, 'title', place)|lower ?: ''}}</strong>{% endfor %} le {{ objectif.validatedat | date("d M Y")  }} par {{ objectif.validator.firstname | default("n/c") }} </dd>
								{% set rolep = "" %}
								{% for people in objectif.peoples %}
									{% if people == app.user.people %}{% set rolep = "people" %}{% endif %}
								{% endfor %}
								{% set roles = "" %}{% if objectif.suppleant == app.user.people  %}{% set roles = "suppleant" %}{% set rolep = "people" %}{% endif %}
								{% set roler = "" %}{% if objectif.responsable == app.user.people or is_granted('ROLE_ADMIN')  %}{% set roler = "responsable" %}{% set roles = "suppleant" %}{% set rolep = "people" %}{% endif %}
								{% for transition in workflow_transitions(objectif) %}
									{% if workflow_can(objectif, transition.name) %}
										{% if workflow_metadata(objectif, 'role', transition) in [rolep, roles, roler] %}
											<a type="button" href="#" style="margin: 2px" class="ajaxWorkflow btn btn-{{ workflow_metadata(objectif, 'ambiance', transition)}} btn-xs adisab" data-id="{{ objectif.id }}" data-statewk="{{ transition.name }}" data-entite="objectif">
											{{ workflow_metadata(objectif, 'title', transition) ?: 'n-a'}}
											</a>
										{% endif %}
									{% endif %}
								{% else %}
									No actions available.
								{% endfor %}
							</div>
						</div>
						<br><br>
					
						<div class="row">
							<div class="col-lg-12">
								<div class="tabs-container">
									<ul class="nav nav-tabs">
										<li>
											<a class="nav-link active show" data-toggle="tab" href="#introduction"> 
												<span style="font-size: 18px;">
													<i class="fa fa-info-circle"></i>
												</span>
											</a>
										</li>
										{% if editMode %}
										<li>
											<a class="nav-link" data-toggle="tab" href="#docs"> 
												<span style="font-size: 18px;">
													<i class="fa fa-files-o"></i>
												</span>
											</a>
										</li>
										{% endif %}
										<li>
											<a class="nav-link" data-toggle="tab" href="#comment"> 
												<span style="font-size: 18px;">
													<i class="fa fa-pencil-square-o"></i>
												</span>
											</a>
										</li>
									</ul>
									
									<div class="tab-content">
										
										<div id="introduction" class="tab-pane active show">
											<div class="panel-body">
												<div class="row">	
													<div class="col-sm-12">
													
														<h2>Description</h2>

                                                        <div class="form-group  row">
                                                            <label class="col-sm-2 col-form-label">{{ form_label(formObjectif.description, 'Description') }}</label>
                                                            <div class="col-sm-10">{{ form_widget(formObjectif.description)}}</div>
                                                            <div class="col-sm-3"></div>
                                                        </div>

														<div class="hr-line-dashed"></div>
					    
														<div class="form-group row">
															<label class="col-sm-2 col-form-label">Objectif cible</label>
															<div class="col-sm-5">
																<span class="form-text m-b-none text-navy">Valeur cible</span>
																{{ form_widget(formObjectif.valeurcible)}}
															</div>
															<div class="col-sm-5">
																<span class="form-text m-b-none text-navy">Type de valeur</span>
																{{ form_widget(formObjectif.type)}}
															</div>
														</div>

														<div class="hr-line-dashed"></div>

														<div class="form-group row">
															<label class="col-sm-2 col-form-label">{{ form_label(formObjectif.typeconformites, 'Comply') }}</label>
															<div class="col-sm-10">{{ form_widget(formObjectif.typeconformites)}}</div>
														</div>
														
														<div class="hr-line-dashed"></div>

														<div class="form-group  row">
															<label class="col-sm-2 col-form-label">Valeur indicateur {% if is_granted('ROLE_ADMIN') %}<button type='button' id="add-indicateur" class="btn btn-outline-success btn-xs">+</button>{% endif %}
															</label>
															<div class="col-sm-10">{{ form_widget(formObjectif.indicateurs) }}</div>
														</div>


														<h2>Description</h2>
														<div class="hr-line-dashed"></div>

														<div class="form-group row">
															<label class="col-sm-2 col-form-label">{{ form_label(formObjectif.processus, 'Processus') }}</label>
															<div class="col-sm-10">{{ form_widget(formObjectif.processus)}}</div>
														</div>

                                                        
														
													</div>
											
												</div>
											</div>
										</div>
									

										{% if editMode %}
										<div id="docs" class="tab-pane">
											<div class="panel-body">
												<div class="row">
													<div class="col-md-12"><h3>Gestionnaire de fichiers</h3></div>
												</div>
												<br>			                                
												<div class="form-group row">				
													<div class="col-sm-12">
														<iframe id="myframe" src="{{ path('file_manager', {module:1, conf:'entry', tree:0, extra: {'customer':app.user.customer.id, 'customername':app.user.customer.designation,  'bigentity': 'Objectifs', 'entryprefix': 'OBJ', 'entryid': objectif.id, 'entryname': objectif.designation}}) }}" width="100%" height="500" frameborder="0"></iframe>
													</div>
												</div>
											</div>
										</div>
										{% endif %}
										<div id="comment" class="tab-pane">
											<div class="panel-body">
												<div class="row">
													<div class="col-md-12"><h3>Notes</h3></div>
												</div>
												<br>			                                
												<div class="form-group row">				
													<div class="col-sm-12">
														{{ form_widget(formObjectif.commentaire)}}
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>						
					</div>
				</div>
			</div>
		</div>

    {{ form_end(formObjectif) }}
{% endblock %}


{% block _objectif_indicateurs_widget %}
		{{ form_widget(form)}}
{% endblock %}
{% block _objectif_indicateurs_entry_widget %}
    <div class="row" id="block_{{id}}">
		<div class="col-12"><span class="form-text m-b-none text-navy">Valeur √† date</span>{{ form_widget(form.valeur)}}</div>
		<div class="col-10"><span class="form-text m-b-none text-navy">Date de publication</span>{{ form_widget(form.PublishedAt)}}</div>
		<div class="col-2"><span class="form-text m-b-none text-white">.</span>{% if is_granted('ROLE_ADMIN') %}<button type="button" data-action="delete" data-target="#block_{{id}}" id="del" class="btn btn-outline-secondary btn-sm"><i class="fa fa-trash"></i></button>{% endif %}</div> 
    </div>
{% endblock %}



	
