<table class="hover table table-bordered dataTables-tier" >
    <thead>
        <tr>
            <th scope="col">Désignation</th>
            <th scope="col">Type</th>
            <th scope="col">Scoring</th>
            <th scope="col">Managers</th>
            <th scope="col" class="no-sort"></th>
        
        </tr>
    </thead>
    <tbody>
        {% for tier in tiers %}
            <article>
                <tr>
                    <td  class="table-title"  scope="row" data-order="{{ tier.designation }}">
                    <a class="" href="{{path('tier_edit',{'id' : tier.id} ) }}">{{ tier.designation | default("") }}</a>
                    <span class="badge badge-secondary small">T-{{ tier.id }}</span>
                    </td>
                    
                    <td scope="row">{{ tier.type.designation | default("") }}</td>
                    <td scope="row">
                    <h5>
                        {{ tier.score.designation | default("") }}
                    </h5>
                    </td>
                    <td scope="row"><b>{{ tier.responsable.firstname | default("")  }} {{ tier.responsable.lastname | default("")  }}</b><br>
                        {{ tier.suppleant.firstname | default("")  }} {{ tier.suppleant.lastname | default("")  }}
                    </td>
                
                    <td data-order="{{ tier.PublishedAt | date("Ymd")}}">
                        <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-info"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href="{{path('tier_edit',{'slug' : tier.slug, 'id' : tier.id, 'r' : r, 'rr' : rr} ) }}"> Afficher</a>
                            {% if is_granted('ROLE_ADMIN')  or is_granted('ROLE_USER_ALLOWDELETE') %}
                            <a class="dropdown-item del" href="{{path('tier_remove',{'slug' : tier.slug, 'id' : tier.id, 'r' : r, 'rr' : rr} ) }}"> Supprimer</a>
                            {% endif %}
                            <a class="dropdown-item">
                                <small>Modifiée le {{ tier.PublishedAt | date("d M Y")}}</small>
                                <small> {% set today = "now"|date("Y/m/d") %}
                                {% set difference = date(tier.PublishedAt).diff(date(today)) %}
                                {% set leftDays = difference.days %}
                                {% if leftDays >= 180 and leftDays < 360 %}
                                <small class="text-warning">({{ leftDays }}j)</small>
                                {% elseif leftDays >= 360 %}
                                    <small class="text-danger">({{ leftDays }}j)</small>
                                {% else %}
                                    <small>({{ leftDays }}j)</small>
                                {% endif %}
                                <br>par {{tier.publisher.firstname | default("") }} {{ tier.publisher.lastname | default("") }}</small>
                            </a>
                        </div>
                    </td>
                </tr>
            </article>
        {% endfor %}
    </tbody>
</table>