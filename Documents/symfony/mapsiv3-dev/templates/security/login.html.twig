{% extends 'baseoffline.html.twig' %}
{% block body %}
    
    <form class="m-t" role="form" action="{{ path('login') }}" method="post">
        <img src="/img/mapsi.png" class="rounded mx-auto d-block">
        <br>
        <h2 class="text-center"><strong>Se connecter à MAPSI</strong></h2>
        <p class="text-center">à l'aide de votre compte</p>

        <br><br>

        <div class="form-group">
            Identifiant
            <input placeholder="Email" required name="_username" type="text" class="form-control" required value="{{username}}">
        </div>

        <div class="form-group"><label class="mb-1">
               Mot de passe
            </label> <input placeholder="Mot de passe" required name="_password" type="password" class="form-control"> 
            <a href="{{path('renew')}}" class="ml-auto mb-0 text-danger"><small class="font-weight-bold">Mot de passe oublié ?</small></a>
        </div>

        <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
        <label for="remember_me"><small class="font-weight-bold">Rester connecté ?</small></label>

        <br>
        {% if hasError %}
            <div class='alert alert-danger'>
                Le nom d'utilisateur et / ou le mot de passe sont incorrectes
            </div>
        {% endif %}
        <br><br>

       <small class="font-weight-bold">Vous n'avez pas de compte MAPSI ? <a href="https://web.mapsi.fr/contactez-nous/" class="text-danger"> Contactez-nous</a></small>
    </form>
{% endblock %}

