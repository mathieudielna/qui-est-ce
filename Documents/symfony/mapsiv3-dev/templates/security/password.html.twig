{% extends 'baseform.html.twig' %}







{% block body %}

{{ form_start(formpassword) }}
   <div class="row">
        <div class="col-lg-12">
	        <div class="ibox" id="printed">
	            <div class="ibox-content">
					<div class="row">
						<div class="col-lg-6">
							<h2>
							Mot de passe de {{ app.user.prenom }} {{ app.user.nom | capitalize }}
							</h2>
						</div>
						<div class="col-lg-6">
							<span class="float-right">
								{{ include('mod/edit-buttons.html.twig', {entname : 'user', entid : user.id }) }}
							</span>
						</div>
					</div>

					<br>
					<br>
					
						<div class="form-group  row">
							<label class="col-sm-2 col-form-label">{{ form_label(formpassword.oldPassword, 'Mot de passe actuel') }}</label>
							<div class="col-sm-10">{{ form_widget(formpassword.oldPassword)}}</div>
					    </div>
					    
					    
					    <div class="hr-line-dashed"></div>
					    
					    <div class="form-group row pwd-container">
							<label class="col-sm-2 col-form-label securityeval">{{ form_label(formpassword.newPassword, 'Nouveau mot de passe') }}</label>
							<div class="col-sm-10">{{ form_widget(formpassword.newPassword)}}</div>
					    </div>
					    
					    <div class="hr-line-dashed"></div>
					    
					    <div class="form-group  row">
							<label class="col-sm-2 col-form-label">{{ form_label(formpassword.confirmPassword, 'Confirmer le nouveau mot de passe') }}</label>
							<div class="col-sm-10">{{ form_widget(formpassword.confirmPassword)}}</div>
					    </div>

					
	            </div>
	        </div>
    	</div>
    </div>
{{ form_end(formpassword) }}
{% endblock %}

