									<div id="introduction" class="tab-pane active show">
			                            <div class="panel-body">
			                                <div class="row">	
												<div class="col-lg-8">
													<p>
														{{ objetmetier.description | raw}}
													</p>
												</div>
												<div class="col-lg-4">
